  <!-- 作品详情模态框 -->
  <div id="workModal" class="fixed inset-0 z-50 flex items-center justify-center bg-black/80 opacity-0 pointer-events-none transition-opacity duration-300">
    <div class="bg-white rounded-2xl max-w-4xl w-full max-h-[90vh] overflow-auto m-4 transform scale-95 transition-transform duration-300">
      <div class="p-6 md:p-8">
        <div class="flex justify-between items-center mb-6">
          <h3 class="text-2xl font-bold" id="modalTitle">作品详情</h3>
          <button id="closeModal" class="text-gray-500 hover:text-gray-700 text-xl">
            <i class="fa fa-times"></i>
          </button>
        </div>
        
        <div id="modalContent">
          <!-- 模态框内容将通过JavaScript动态填充 -->
        </div>
      </div>
    </div>
  </div>

  <script>
    // 页面加载完成后执行
    document.addEventListener('DOMContentLoaded', function() {
      // 开场动画
      setTimeout(function() {
        const loader = document.getElementById('loader');
        loader.classList.add('opacity-0');
        setTimeout(function() {
          loader.style.display = 'none';
        }, 500);
      }, 1500);
      
      // 导航栏滚动效果
      const navbar = document.getElementById('navbar');
      window.addEventListener('scroll', function() {
        if (window.scrollY > 50) {
          navbar.classList.add('bg-navy', 'shadow-lg');
          navbar.classList.remove('py-4');
          navbar.classList.add('py-2');
        } else {
          navbar.classList.remove('bg-navy', 'shadow-lg');
          navbar.classList.add('py-4');
          navbar.classList.remove('py-2');
        }
      });
      
      // 移动端菜单
      const menuBtn = document.getElementById('menuBtn');
      const closeMenuBtn = document.getElementById('closeMenuBtn');
      const mobileMenu = document.getElementById('mobileMenu');
      const mobileLinks = document.querySelectorAll('.mobile-link');
      
      menuBtn.addEventListener('click', function() {
        mobileMenu.classList.remove('translate-x-full');
      });
      
      closeMenuBtn.addEventListener('click', function() {
        mobileMenu.classList.add('translate-x-full');
      });
      
      mobileLinks.forEach(link => {
        link.addEventListener('click', function() {
          mobileMenu.classList.add('translate-x-full');
        });
      });
      
      // 滚动动画
      const animateElements = document.querySelectorAll('[data-animate]');
      
      function checkAnimation() {
        animateElements.forEach(element => {
          const elementTop = element.getBoundingClientRect().top;
          const elementVisible = 150;
          const delay = element.getAttribute('data-delay') || 0;
          
          if (elementTop < window.innerHeight - elementVisible) {
            setTimeout(() => {
              element.style.animation = `${element.getAttribute('data-animate')} 0.8s ease forwards`;
            }, delay);
          }
        });
      }
      
      window.addEventListener('scroll', checkAnimation);
      checkAnimation(); // 初始检查
      
      // 作品筛选
      const filterButtons = document.querySelectorAll('.work-filter');
      const workItems = document.querySelectorAll('.work-item');
      
      filterButtons.forEach(button => {
        button.addEventListener('click', function() {
          // 更新按钮状态
          filterButtons.forEach(btn => {
            btn.classList.remove('active', 'bg-navy', 'text-white');
            btn.classList.add('bg-gray-200', 'text-gray-700');
          });
          
          this.classList.add('active', 'bg-navy', 'text-white');
          this.classList.remove('bg-gray-200', 'text-gray-700');
          
          const filter = this.getAttribute('data-filter');
          
          // 筛选作品
          workItems.forEach(item => {
            if (filter === 'all' || item.getAttribute('data-category') === filter) {
              item.style.display = 'block';
            } else {
              item.style.display = 'none';
            }
          });
        });
      });
      
      // 技能图表
      const ctx = document.getElementById('skillsChart').getContext('2d');
      const skillsChart = new Chart(ctx, {
        type: 'radar',
        data: {
          labels: ['Photoshop', 'Illustrator', 'InDesign', 'Adobe XD', 'Premiere', 'Figma'],
          datasets: [{
            label: '软件熟练度',
            data: [90, 95, 85, 75, 65, 80],
            backgroundColor: 'rgba(255, 209, 0, 0.2)',
            borderColor: '#FFD100',
            pointBackgroundColor: '#FFD100',
            pointBorderColor: '#fff',
            pointHoverBackgroundColor: '#fff',
            pointHoverBorderColor: '#FFD100'
          }]
        },
        options: {
          scales: {
            r: {
              angleLines: {
                color: 'rgba(255, 255, 255, 0.1)'
              },
              grid: {
                color: 'rgba(255, 255, 255, 0.1)'
              },
              pointLabels: {
                color: '#fff',
                font: {
                  size: 12
                }
              },
              ticks: {
                backdropColor: 'transparent',
                color: 'rgba(255, 255, 255, 0.7)'
              }
            }
          },
          plugins: {
            legend: {
              display: false
            }
          }
        }
      });
      
      // 作品详情模态框
      const workModal = document.getElementById('workModal');
      const modalTitle = document.getElementById('modalTitle');
      const modalContent = document.getElementById('modalContent');
      const closeModal = document.getElementById('closeModal');
      const viewWorkButtons = document.querySelectorAll('.view-work');
      
      // 打开模态框
      viewWorkButtons.forEach(button => {
        button.addEventListener('click', function() {
          const workItem = this.closest('.work-item');
          const title = workItem.querySelector('h3').textContent;
          const category = workItem.querySelector('span').textContent;
          const description = workItem.querySelector('p').textContent;
          const imageSrc = workItem.querySelector('img').src;
          
          // 设置模态框内容
          modalTitle.textContent = title;
          modalContent.innerHTML = `
            <div class="mb-6">
              <span class="text-xs font-semibold text-mango bg-mango/10 px-3 py-1 rounded-full">${category}</span>
            </div>
            <div class="mb-6">
              <img src="${imageSrc}" alt="${title}" class="w-full h-auto rounded-lg">
            </div>
            <div class="mb-6">
              <h4 class="text-lg font-semibold mb-3">项目描述</h4>
              <p class="text-gray-600">${description}</p>
              <p class="text-gray-600 mt-4">该项目是我在大学期间完成的课程作业/竞赛作品，通过深入研究主题内涵，结合现代设计语言，创造出既符合主题又具有视觉冲击力的设计作品。项目获得了老师/评委的高度评价，并在学校展览中展出。</p>
            </div>
            <div>
              <h4 class="text-lg font-semibold mb-3">设计要点</h4>
              <ul class="list-disc pl-5 text-gray-600 space-y-2">
                <li>采用对比鲜明的色彩方案，突出主题</li>
                <li>简洁明了的视觉层次，提升信息传达效率</li>
                <li>结合多种设计元素，创造丰富的视觉体验</li>
                <li>注重细节处理，提升整体品质感</li>
              </ul>
            </div>
          `;
          
          // 显示模态框
          workModal.classList.remove('opacity-0', 'pointer-events-none');
          workModal.querySelector('div').classList.remove('scale-95');
          workModal.querySelector('div').classList.add('scale-100');
          document.body.style.overflow = 'hidden';
        });
      });
      
      // 关闭模态框
      closeModal.addEventListener('click', closeWorkModal);
      
      workModal.addEventListener('click', function(e) {
        if (e.target === workModal) {
          closeWorkModal();
        }
      });
      
      function closeWorkModal() {
        workModal.classList.add('opacity-0', 'pointer-events-none');
        workModal.querySelector('div').classList.remove('scale-100');
        workModal.querySelector('div').classList.add('scale-95');
        document.body.style.overflow = '';
      }
      
      // 点击ESC关闭模态框
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && !workModal.classList.contains('pointer-events-none')) {
          closeWorkModal();
        }
      });
    });
  </script>
</body>
</html>
